---
import type { CollectionEntry } from 'astro:content';
import Base from './Base.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'readme'>['data'];

const { title, subtitle, publishDate, tags, thumbnail } = Astro.props;
---

<Base title={title} description={subtitle || title}>
	<article>
		<!-- Hero Section with gradient background -->
		<div class="bg-hero-gradient dark:bg-gradient-to-br dark:from-gray-800 dark:to-gray-700 text-white py-16 px-6">
			<div class="max-w-4xl mx-auto">
				<h1 class="text-4xl md:text-5xl font-bold mb-4">{title}</h1>
				{subtitle && (
					<p class="text-xl md:text-2xl text-blue-100 dark:text-gray-200 mb-6">{subtitle}</p>
				)}
				<div class="flex flex-wrap items-center gap-4 text-blue-100 dark:text-gray-300">
					<FormattedDate date={publishDate} />
					{thumbnail && (
						<img src={thumbnail} alt="" class="w-8 h-8 rounded" />
					)}
				</div>
			</div>
		</div>

		<!-- Content Section -->
		<div class="max-w-4xl mx-auto px-6 py-12 bg-white dark:bg-gray-800">
			<!-- Article Content -->
			<div class="prose prose-lg dark:prose-invert max-w-none">
				<slot />
			</div>
		</div>
	</article>
</Base>