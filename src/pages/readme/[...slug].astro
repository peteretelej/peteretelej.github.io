---
import { type CollectionEntry, getCollection, render } from "astro:content";
import ReadmePost from "../../layouts/ReadmePost.astro";
import EmbedNoteAstro from "../../components/mdx/EmbedNoteAstro.astro";
import EmbedNotesAstro from "../../components/mdx/EmbedNotesAstro.astro";

export async function getStaticPaths() {
  const posts = await getCollection("readme", ({ data }) => {
    // Show drafts in development, hide in production
    return import.meta.env.DEV ? true : data.draft !== true;
  });
  return posts.map((post) => ({
    params: { slug: post.id },
    props: post,
  }));
}

type Props = CollectionEntry<"readme">;

const post = Astro.props;
const { Content } = await render(post);
---

<ReadmePost {...post.data} slug={post.id}>
  <Content components={{ Note: EmbedNoteAstro, Notes: EmbedNotesAstro }} />
</ReadmePost>
