---
import HeaderLink from "./HeaderLink.astro";
import ThemeToggle from "./react/ThemeToggle.tsx";
import MobileMenu from "./react/MobileMenu.tsx";
---

<!-- Skip Navigation Links -->
<a
  href="#main-content"
  class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2 bg-brand-600 text-white px-4 py-2 rounded-md z-[60] transition-all"
>
  Skip to main content
</a>

<header
  class="bg-white dark:bg-gray-900 border-b border-neutral-200 dark:border-neutral-800"
>
  <nav
    class="max-w-7xl mx-auto px-6 lg:px-8 py-2 flex items-center justify-between"
    aria-label="Main navigation"
  >
    <h2 class="text-xl font-bold">
      <a
        href="/"
        class="font-serif text-gray-900 dark:text-white no-underline hover:text-blue-600 dark:hover:text-blue-400 transition-colors"
      >
        Let's Talk Code
      </a>
    </h2>
    <div class="flex items-center space-x-8">
      <div class="hidden md:flex items-center space-x-6">
        <HeaderLink href="/">Home</HeaderLink>
        <HeaderLink href="/readme">README</HeaderLink>
        <HeaderLink href="/notes">Notes</HeaderLink>
        <HeaderLink href="/about">About</HeaderLink>
      </div>
      <div class="flex items-center space-x-4 gap-2">
        <ThemeToggle client:visible />
        <a
          href="https://github.com/peteretelej"
          target="_blank"
          rel="noopener noreferrer"
          class="hidden md:block text-gray-600 hover:text-brand-600 dark:text-gray-400 dark:hover:text-brand-400 transition-colors focus:outline-none focus:ring-2 focus:ring-brand-500 focus:ring-offset-2 dark:focus:ring-offset-gray-900 rounded-md p-1"
          aria-label="Visit Peter Etelej's GitHub profile"
        >
          <svg viewBox="0 0 16 16" aria-hidden="true" width="20" height="20"
            ><path
              fill="currentColor"
              d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
            ></path></svg
          >
        </a>
        <MobileMenu client:visible />
      </div>
    </div>
  </nav>
</header>
