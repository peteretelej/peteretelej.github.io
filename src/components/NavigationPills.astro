---
export interface Props {
  links: { href: string; label: string }[];
}

const { links } = Astro.props;
---

<div class="navigation-pills my-8">
  <div class="flex flex-wrap gap-3">
    {links.map(link => (
      <a 
        href={link.href} 
        class="nav-pill inline-flex items-center px-4 py-2 bg-brand-600 hover:bg-brand-700 text-white border border-brand-600 hover:border-brand-700 rounded-full text-sm font-medium transition-all duration-200 no-underline shadow-sm hover:shadow-md hover:-translate-y-0.5"
      >
        {link.label}
      </a>
    ))}
  </div>
</div>